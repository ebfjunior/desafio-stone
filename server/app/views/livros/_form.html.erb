<%= simple_form_for(@livro, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
    <%= f.input :nome, input_html: {class: "form-control"} %>
    <%= f.input :foto, as: :file %>
    <%= f.input :descricao %>
    <%= f.input :valor %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
